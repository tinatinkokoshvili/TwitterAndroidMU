<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/ivFixedProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="13dp"
        tools:srcCompat="@drawable/ic_vector_person_stroke" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
        tools:layout_editor_absoluteY="13dp"
        tools:text="Tina Kokoshvili" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="I am so cool!" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivMedia"
        android:layout_width="250dp"
        android:layout_height="221dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/tvBody"
        app:riv_corner_radius="10dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvScreenName"
        tools:layout_editor_absoluteY="13dp"
        tools:text="1 hr" />

    <ImageView
        android:id="@+id/ivCommentStroke"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        app:srcCompat="@drawable/ic_vector_messages_stroke" />

    <ImageView
        android:id="@+id/ivRetweetStroke"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        app:srcCompat="@drawable/ic_vector_retweet" />

    <ImageView
        android:id="@+id/ivHeartStroke"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        app:srcCompat="@drawable/ic_vector_heart" />

    <TextView
        android:id="@+id/tvRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        tools:text="1304" />

    <TextView
        android:id="@+id/tvHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia"
        tools:text="1524" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        tools:layout_editor_absoluteY="13dp"
        tools:text="\@tinakokoshvili" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:riv_corner_radius="25dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="13dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvReplyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="42"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/ivCommentStroke"
        app:layout_constraintTop_toBottomOf="@+id/ivMedia" />


</androidx.constraintlayout.widget.ConstraintLayout>